@model realEstate1.Models.Property

<form asp-action="Create" method="post" enctype="multipart/form-data" class="d-flex flex-column gap-2">
    

    <div class="d-flex flex-row gap-4">
        <div class="form-group col-5">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" placeholder="Enter property address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group col-5">
            <label asp-for="PricePerDay" class="form-label"></label>
            <input asp-for="PricePerDay" class="form-control" placeholder="Enter price per day" />
            <span asp-validation-for="PricePerDay" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row gap-4">
        <div class="col-5">
            <label asp-for="Type" class="form-label fw-semibold"></label>
            <select asp-for="Type" class="form-select shadow-sm rounded-3">
                <option value="">Select Property Type</option>
                <option value="Apartments">Apartments</option>
                <option value="Villas">Villas</option>
                <option value="Vacation Homes">Vacation Houses</option>
            </select>
            <span asp-validation-for="Type" class="text-danger small"></span>
        </div>
        <div class="form-group col-5">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Enter Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group col-5">
            <label asp-for="terms" class="form-label"></label>
            <input asp-for="terms" class="form-control" placeholder="Enter terms" />
            <span asp-validation-for="terms" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex flex-row gap-4">
        <div class="form-group col-5">
            <label asp-for="Bedrooms" class="form-label"></label>
            <input asp-for="Bedrooms" class="form-control" type="number" min="0" max="50" placeholder="Enter number of bedrooms" />
            <span asp-validation-for="Bedrooms" class="text-danger"></span>
        </div>
        <div class="form-group col-5">
            <label asp-for="Bathrooms" class="form-label"></label>
            <input asp-for="Bathrooms" class="form-control" type="number" min="0" max="50" placeholder="Enter number of bathrooms" />
            <span asp-validation-for="Bathrooms" class="text-danger"></span>
        </div>
    </div>

    <div class="col-5">
        <div class="mb-3">
            <label class="form-label fw-semibold">Upload Images</label>
            <input type="file" id="imageUpload" name="imageFiles" multiple accept="image/*" class="form-control" />
        </div>
        <div id="previewContainer" class="d-flex flex-wrap gap-3"></div>
    </div>

    <div class="form-group col-5">
        <input type="submit" value="Create" class="btn btn-primary w-100" />
    </div>
</form>

<script src="~/js/Images.js"></script>